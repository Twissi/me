---
import { ViewTransitions } from "astro:transitions";
import Header from "../Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Header title={title} />
  <body class="bg-[#8576ff]/10">
    <slot />
    <footer class="p-8">
      <a href="/impressum" class="underline">Impressum</a>
    </footer>
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
      }
    </style>
  </body>
</html>
