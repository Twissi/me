      <div class="post"></div>
    </div>
  </div>
  <% page_articles.group_by {|article| article.metadata[:page]['category']}.each do |category, articles|%>
    <div class="content-category">
      <div class="name"><%= category %><span class="description">This is about</span></div>
      <div class="content">
        <% articles[0...5].each do |article, i| %>
          <div class="post">
            <div class="title"><%= article.title %></div>
            <div class="date"><%= article.date.strftime('%b %e') %></div>
            <div class="tags">
              <%= article.tags.map! { |tag| "#{tag}" }.join(" + "); %>
            </div>
            <!-- use article.summary(250) if you have Nokogiri available to show just
                 the first 250 characters -->
            <div class="content"><%= article.body %></div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

