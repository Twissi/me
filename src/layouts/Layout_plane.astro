---
import Header from "./Header.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  noBgImage: boolean;
}

const { title, noBgImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Header title={title} />
  <body>
    <div class={noBgImage ? "" : "bg-[url('/images/Weather-Meteor--Streamline-Pixel.svg')] p-6"}>
      <slot />
    </div>
    <style is:global>
      :root {
        --purple: #8576ff;
        --light-purple: #b2a4ff;
        --workshop: #8576ff;
        --yellow: #ffdeb4;
        --hackathon: #ffdeb4;
        --blue: #7bc9ff;
        --project: #7bc9ff;
        --light-green: #adff2f;
        --text-color: #555d6b;
      }
      html {
        background-color: var(--light-purple);
      }
    </style>
  </body>
</html>
